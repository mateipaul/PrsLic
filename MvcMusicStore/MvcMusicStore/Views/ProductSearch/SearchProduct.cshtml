@model IEnumerable<MvcMusicStore.Utilities.DatabaseUtilities.Produs>

@using (Html.BeginForm("SearchProduct", "ProductSearch", FormMethod.Get))
{
    @Html.TextBox("search")<input type="submit" name="submit" value="Search" />
}


 <div id="products-wrapper">

     @foreach (var item in Model)
     {
     <div class="product" id="product-@item.Id" style="height:500px;">
         <div class="product-details" style="max-width:40%">
             <div class="product-title" >@item.Denumire</div>
             <div class="product-image">
                 <img src="@item.Url_Imagine" />
             </div>
             <div class="product-price">@string.Format("{0} lei", item.Pret)</div>
         </div>
         <div class="price-evolution" >
             <span class="price-evolution">
                 <img src="@Url.Action("LineChart", "ProductSearch", new {productID = item.Id})" alt="Chart" style="max-width:30%"/>
             </span>
         </div>
     </div>
     <div class="retailer">
         <div class="retailer-name">
            @* <h4>@item.Vanzator.Nume</h4>*@
         </div>
         
         @using (Html.BeginForm("FollowProduct", "ProductSearch",new { @productId = item.Id}, FormMethod.Post))
         {
             <input type="submit" value="Urmareste Produs"/>
         }
     </div>




     }
 </div>


